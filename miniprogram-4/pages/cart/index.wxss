page {
  padding-bottom: 90prx;
}
.recive_address_row .address_btn {
  padding: 20rpx;
}
.recive_address_row .address_btn button {
  width: 60%;
}
.recive_address_row .address_show {
  display: flex;
}
.recive_address_row .address_show .user_info {
  flex: 5;
  flex-direction: column;
  padding: 20rpx;
}
.recive_address_row .address_show .user_phone {
  flex: 3;
  padding: 20rpx;
  text-align: right;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-bottom: 1rpx solid currentColor;
  border-top: 1rpx solid currentColor;
}
.cart_content .cart_main .cart_items {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_items .cart_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_items .cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_items .cart_img_wrap image {
  width: 80%;
}
.cart_content .cart_main .cart_items .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_items .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_content .cart_main .cart_items .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_items .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_content .cart_main .cart_items .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_items .cart_info_wrap .goods_price_wrap .cart_num_tool .num_edit {
  display: flex;
  width: 55rpx;
  height: 55rpx;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_items .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  display: flex;
  width: 55rpx;
  height: 55rpx;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #000;
}
.footer_tool .all_chk_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .total_price_wrap {
  flex: 4;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: right;
  padding-right: 15rpx;
}
.footer_tool .total_price_wrap .total_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.footer_tool .order_pay_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
}
